#environment
  #toolbar
    #keybinding
      Keybinding:
      %a{class: 'bind current', id: 'none', href: '#'} None
      %a{class: 'bind', id: 'vim', href: '#'} Vim
      %a{class: 'bind', id: 'emacs', href: '#'} Emacs

    #run
      %button{id: 'run'} Run

    #halp
      %a{id: 'show_shortcuts', href: '#'} ERHMAGERD KEYBOARD SHORTCUTS
      #shortcuts{class: 'legend'}
        %ul
          %li New Window: Ctrl+0
          %li Tabs 1-8: Ctrl+[1-8]
          %li Run code: Ctrl+Enter

  #drawer
    #add
      %a{id: 'add_file', href: '#'} Add File

    #files
      %a{class: 'session_tab current', 'data-filename' => 'untitled1.rb', 'data-order' => 1, href: '#', title: 'untitled1.rb'}
        untitled1.rb
  #editor-wrapper
    #editor puts "Welcome to Gleam"
  #output-wrapper
    #viewing
      %h1 untitled1.rb
    #output
